<controls:MetroWindow x:Class="WpfGroupFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGroupFinder"
		xmlns:controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="WpfGroupFinder" Height="450" Width="800"
		d:DataContext="{d:DesignData Type=ViewModel:MainViewModel, IsDesignTimeCreatable=False}">
	<Grid>
		<StackPanel Orientation="Vertical">
			<Button Command="{Binding UpdateCommand}" Content="Update"></Button>
		<DataGrid ItemsSource="{Binding Groups}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Binding="{Binding Title}" Header="Title" />
				<DataGridTextColumn Binding="{Binding Space}" Header="Space" />
				<DataGridTextColumn Binding="{Binding Owner}" Header="Owner" />
				<DataGridTextColumn Binding="{Binding FirstSeen}" Header="FirstSeen" />
			</DataGrid.Columns>
		</DataGrid>
		</StackPanel>
	</Grid>
</controls:MetroWindow>